<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".MyPage.MyPageFragment">

    <View
        android:id="@+id/background3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/mainColor"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="My Page"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/background3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background3" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgMypage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/main_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMyPageLogOut"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_style"
        android:text="로그아웃"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnMyPageEdit"
        app:layout_constraintTop_toTopOf="@+id/btnMyPageEdit" />

    <TextView
        android:id="@+id/tvMypageNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="접속자 이름"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imgMypage"
        app:layout_constraintStart_toStartOf="@+id/imgMypage"
        app:layout_constraintTop_toBottomOf="@+id/imgMypage" />

    <Button
        android:id="@+id/btnMyPageEdit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_style"
        android:text="정보수정"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMypageNick" />

    <TextView
        android:id="@+id/tvMyPageDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="회원탈퇴"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/background3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMyBookmark"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_style"
        android:text="북마크 보관함"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btnMyPageLogOut"
        app:layout_constraintStart_toStartOf="@+id/btnMyPageEdit"
        app:layout_constraintTop_toBottomOf="@+id/btnMyPageLogOut" />

</androidx.constraintlayout.widget.ConstraintLayout>
