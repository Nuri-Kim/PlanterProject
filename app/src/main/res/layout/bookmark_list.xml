<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/background3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/mainColor"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="My Bookmark"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/background3"
        app:layout_constraintStart_toStartOf="@+id/background3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/tvBookmarkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="PostTitle"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background3" />

    <TextView
        android:id="@+id/tvBookmarkPostContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:text="PostContent"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvBookmarkUserNick"
        app:layout_constraintTop_toBottomOf="@+id/tvBookmarkUserNick"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvBookmarkUserNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="userNick"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/tvBookmarkTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvBookmarkTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvBookmarkTitle" />

    <TextView
        android:id="@+id/tvBookmarkPostDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="PostDate"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/tvBookmarkUserNick"
        app:layout_constraintTop_toTopOf="@+id/tvBookmarkUserNick" />

    <Button
        android:id="@+id/btnBookmarkDelete"
        android:layout_width="50sp"
        android:layout_height="25sp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_style"
        android:text="삭제"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvBookmarkTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>