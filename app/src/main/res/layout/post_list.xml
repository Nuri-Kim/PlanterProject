<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgPostListPicture"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_image_24" />

    <TextView
        android:id="@+id/tvPostListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타이틀타이틀"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvPostListCategory"
        app:layout_constraintTop_toBottomOf="@+id/tvPostListCategory" />

    <TextView
        android:id="@+id/tvPostListContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="내용내용내용"
        app:layout_constraintStart_toStartOf="@+id/tvPostListTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvPostListTitle" />

    <TextView
        android:id="@+id/tvPostListCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="카테고리카테"
        app:layout_constraintStart_toEndOf="@+id/imgPostListPicture"
        app:layout_constraintTop_toTopOf="@+id/imgPostListPicture" />

    <TextView
        android:id="@+id/space"
        android:layout_width="460dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/mainColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPostListContent" />

</androidx.constraintlayout.widget.ConstraintLayout>